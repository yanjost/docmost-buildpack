#!/usr/bin/env bash
set -e
trap 'echo "[ERROR] $0 failed at line $LINENO: $BASH_COMMAND" >&2' ERR
BUILD_DIR="$1"
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$SCRIPT_DIR/../lib/common.sh"

WEB_CMD="$(cat "$BUILD_DIR/.docmost_web_cmd" 2>/dev/null || echo 'node apps/server/dist/main.js')"

cat <<EOF
addons:
  - postgresql:postgresql-starter-1024
  - redis:redis-starter-512
config_vars:
  APP_URL: "https://docmost.example.com"
  APP_SECRET: ""
  DOCMOST_VERSION: ""
  DATABASE_URL: ""
  REDIS_URL: ""
default_process_types:
  web: "$WEB_CMD"
EOF
