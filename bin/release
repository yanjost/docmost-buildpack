#!/usr/bin/env bash
set -e
BUILD_DIR="$1"
source "$(dirname "$0")/../lib/common.sh"

WEB_CMD="$(cat "$BUILD_DIR/.docmost_web_cmd" 2>/dev/null || echo 'node apps/server/dist/main.js')"

cat <<EOF
addons:
  - postgresql:postgresql-starter-1024
  - redis:redis-starter-512
config_vars:
  APP_URL: "https://docmost.example.com"
  APP_SECRET: ""
  DOCMOST_VERSION: ""
  DATABASE_URL: ""
  REDIS_URL: ""
default_process_types:
  web: "$WEB_CMD"
EOF
