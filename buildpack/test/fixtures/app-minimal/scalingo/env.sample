# Required
APP_URL=https://docmost.example.com   # Public URL
APP_SECRET=                           # 64-char hex: openssl rand -hex 32
DOCMOST_VERSION=1.9.0                 # Docmost release tag
DATABASE_URL=                         # Auto-mapped from SCALINGO_POSTGRESQL_URL if empty
REDIS_URL=                            # Auto-mapped from SCALINGO_REDIS_URL if empty

# Optional S3
STORAGE_DRIVER=                       # s3 to enable S3 storage
AWS_S3_ACCESS_KEY_ID=
AWS_S3_SECRET_ACCESS_KEY=
AWS_S3_REGION=
AWS_S3_BUCKET=
AWS_S3_ENDPOINT=                      # For non-AWS S3
AWS_S3_FORCE_PATH_STYLE=true          # true|false

# SMTP (Brevo example)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=<brevo-login>
SMTP_PASSWORD=<brevo-api-key>
SMTP_FROM="Docmost <noreply@yourdomain.com>"
SMTP_SECURE=false
